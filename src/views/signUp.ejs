<h3 class="heading-banner"><b>Create an account</b></h3>
<div class="register_form">


<% if(production != "production") { %>

  <form action="http://localhost:3000/userSystems/register" method="POST">

    <input type="email" name="email" placeholder="Email">
    <br>
    <br>
    <input type="text" name="username" required="true" placeholder="Username">
    <br>
    <br>
    <input type="password" name="password" required="true" placeholder="Password">

    <br>
    <br>
    <br>
    <button type="submit" id="create-btn">Sign Up</button>
  </form>
  <br>
  <br>
  <p>Already Have An Account? Login<a href="http://localhost:3000/userSystems/login" style="text-decoration: none;"> Here</a>!</p>
<% } else { %>
  <form action="https://anskep.herokuapp.com/userSystems/register" method="POST">
      <input type="text" name="username" required="true" placeholder="Username">
      <br>
      <br>
      <input type="password" name="password" required="true" placeholder="Password">
      <br>
      <br>
      <br>
      <button type="submit">Login</button>
  </form>
  <br>
  <br>
  <p>Already Have An Account? Login<a href="https://anskep.herokuapp.com/userSystems/login" style="text-decoration: none;"> Here</a>!</p>
<% } %>
</div>
