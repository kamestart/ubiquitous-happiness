<div class="join-container">
		<header class="join-header">
			<h1><i class="far fa-smile-beam"></i>    ChatCord</h1>
		</header>
		<main class="join-main">
			<form action="/chat">
				<div class="form-control">
					<label for="username">Username</label>
					<% if (!user) { %> 
						<input type="text" name="username" id="username" placeholder="Enter username..." required />
					<% } %> 
				</div>
				<div class="form-control">
					<label for="room">Room</label>
					<select name="room" id="room">
						<option value="JavaScript">JavaScript Team</option>
						<option value="Python">Python Team</option>
						<option value="PHP">PHP Team</option>
						<option value="C#">C# Team</option>
						<option value="Ruby">Ruby Team</option>
						<option value="Java">Java Team</option>
						</select>
					</div>
					<button type="submit" class="btn">Join Chat</button>
				</form>
			</main>
		</div>
	</body>
</html>